{
  "version": 2,
  "builds": [
    {
      "src": "proyecto/proyecto/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "bash build.sh",
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "proyecto/proyecto/wsgi.py"
    }
  ]
}
